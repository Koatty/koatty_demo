{
  "name": "koatty_demo1",
  "version": "1.0.0",
  "description": "application created by koatty",
  "main": "./dist/App.js",
  "scripts": {
    "build": "npm run clear && tsc && copyfiles -u 1 ./src/**/*.json ./src/**/*.proto dist/",
    "clear": "del-cli --force dist",
    "build:images": "npm run build && docker build -t koatty/_PROJECT_NAME:latest -f deploy/Dockerfile .",
    "eslint": "eslint --ext .ts,.js ./",
    "dev": "nodemon ./src/App.ts",
    "doc": "apidoc -i src/controller/ -o static/doc/",
    "prerelease": "npm test && npm run build",
    "release": "npm run prepublishOnly && standard-version",
    "start": "npm run build && NODE_ENV=production node ./dist/App.js",
    "test": "npm run eslint && npm run build && jest --passWithNoTests --detectOpenHandles"
  },
  "engines": {
    "node": ">12.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "watch": [
      "src"
    ],
    "execMap": {
      "ts": "ts-node"
    },
    "legacyWatch": true,
    "delay": "1000"
  },
  "author": "",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@commitlint/cli": "^17.x.x",
    "@commitlint/config-conventional": "^17.x.x",
    "@types/jest": "^27.x.x",
    "@types/koa": "^2.x.x",
    "@types/koa__router": "^8.x.x",
    "@types/node": "^17.x.x",
    "@types/validator": "^13.x.x",
    "@types/ws": "^8.x.x",
    "@typescript-eslint/eslint-plugin": "^5.x.x",
    "@typescript-eslint/parser": "^5.x.x",
    "conventional-changelog-cli": "^2.x.x",
    "copyfiles": "^2.x.x",
    "del-cli": "^4.x.x",
    "eslint": "^8.x.x",
    "eslint-plugin-jest": "^26.x.x",
    "husky": "^4.x.x",
    "jest": "^28.x.x",
    "jest-html-reporters": "^3.x.x",
    "nodemon": "^2.x.x",
    "standard-version": "^9.x.x",
    "ts-jest": "^28.x.x",
    "ts-node": "^10.x.x",
    "typescript": "^4.x.x"
  },
  "dependencies": {
    "koatty": "^3.7.3",
    "koatty_cacheable": "^1.3.7",
    "koatty_schedule": "^1.5.8",
    "koatty_static": "^1.2.10",
    "koatty_store": "^1.5.6",
    "koatty_typeorm": "^1.1.10",
    "koatty_views": "^1.0.8",
    "mysql": "^2.18.1",
    "typeorm": "^0.3.10"
  }
}