{
  "name": "koatty_demo",
  "version": "1.0.0",
  "description": "application created by koatty",
  "main": "dist/index.js",
  "scripts": {
    "build": "del-cli --force dist && tsc && copyfiles -u 1 ./src/**/*.json ./src/**/*.proto dist/",
    "eslint": "eslint --ext .ts,.js ./",
    "dev": "nodemon ./src/App.ts",
    "doc": "apidoc -i src/controller/ -o static/doc/",
    "start": "npm run build && NODE_ENV=production node ./dist/App.js",
    "test": "npm run eslint && jest --passWithNoTests",
    "test:cov": "jest --collectCoverage --detectOpenHandles"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "watch": [
      "src"
    ],
    "execMap": {
      "ts": "ts-node"
    },
    "legacyWatch": true,
    "delay": "1000"
  },
  "author": "",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@babel/core": "^7.x.x",
    "@babel/plugin-proposal-decorators": "^7.x.x",
    "@babel/preset-env": "^7.x.x",
    "@babel/preset-typescript": "^7.x.x",
    "@commitlint/cli": "^12.x.x",
    "@commitlint/config-conventional": "^15.x.x",
    "@types/jest": "^27.x.x",
    "@types/koa": "^2.x.x",
    "@types/koa__router": "^8.0.11",
    "@types/node": "^16.x.x",
    "@types/validator": "^13.x.x",
    "@types/ws": "^8.x.x",
    "@typescript-eslint/eslint-plugin": "^5.x.x",
    "@typescript-eslint/parser": "^5.x.x",
    "apidoc": "^0.x.x",
    "conventional-changelog-cli": "^2.x.x",
    "copyfiles": "^2.x.x",
    "del-cli": "^4.x.x",
    "eslint": "^8.x.x",
    "eslint-plugin-jest": "^25.x.x",
    "husky": "^7.x.x",
    "jest": "^27.x.x",
    "jest-html-reporters": "^2.x.x",
    "standard-version": "^9.x.x",
    "ts-jest": "^27.x.x",
    "ts-node": "^10.x.x",
    "typescript": "^4.x.x"
  },
  "dependencies": {
    "koatty": "^3.5.10",
    "koatty_cacheable": "^1.3.6",
    "koatty_schedule": "^1.5.2",
    "koatty_static": "^1.2.8",
    "koatty_store": "^1.5.4",
    "koatty_typeorm": "^1.1.6",
    "koatty_validation": "^1.0.10",
    "koatty_views": "^1.0.6",
    "mysql": "^2.18.1",
    "tslib": "^2.3.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}