{
  "name": "ktdemo",
  "version": "1.0.0",
  "description": "application created by koatty",
  "main": "./dist/App.js",
  "scripts": {
    "build": "npm run clear && tsc && copyfiles -u 1 ./src/**/*.json ./src/**/*.proto dist/",
    "clear": "del-cli --force dist",
    "build:images": "npm run build && docker build -t koatty/ktdemo:latest -f deploy/Dockerfile .",
    "eslint": "eslint --ext .ts,.js ./",
    "dev": "nodemon ./src/App.ts",
    "doc": "apidoc -i src/ -o static/doc/",
    "prerelease": "npm test && npm run build",
    "release": "standard-version",
    "prepublishOnly": "npm run prerelease",
    "start": "npm run build && cross-env NODE_ENV=production node ./dist/App.js",
    "test": "npm run eslint && npm run build && jest --passWithNoTests --detectOpenHandles"
  },
  "engines": {
    "node": ">14.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "watch": [
      "src"
    ],
    "execMap": {
      "ts": "ts-node"
    },
    "legacyWatch": true,
    "delay": "1000"
  },
  "author": "",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@commitlint/cli": "^17.x.x",
    "@commitlint/config-conventional": "^17.x.x",
    "@types/jest": "^29.x.x",
    "@types/koa": "^2.x.x",
    "@types/koa__router": "^12.x.x",
    "@types/koa-mount": "^4.0.2",
    "@types/node": "^18.x.x",
    "@types/oidc-provider": "^8.2.0",
    "@types/validator": "^13.x.x",
    "@types/ws": "^8.x.x",
    "@typescript-eslint/eslint-plugin": "^5.x.x",
    "@typescript-eslint/parser": "^5.x.x",
    "apidoc": "^0.55.0",
    "apidoc-plugin-class-validator": "^0.0.3",
    "conventional-changelog-cli": "^2.x.x",
    "copyfiles": "^2.x.x",
    "cross-env": "^7.x.x",
    "del-cli": "^5.x.x",
    "eslint": "^8.x.x",
    "eslint-plugin-jest": "^27.x.x",
    "husky": "^4.x.x",
    "jest": "^29.x.x",
    "jest-html-reporters": "^3.x.x",
    "nodemon": "^2.x.x",
    "standard-version": "^9.x.x",
    "supertest": "^6.x.x",
    "ts-jest": "^29.x.x",
    "ts-node": "^10.x.x",
    "typescript": "^5.x.x"
  },
  "dependencies": {
    "koa-mount": "^4.0.0",
    "koatty": "^3.9.3",
    "koatty_cacheable": "^1.4.0",
    "koatty_schedule": "^1.5.11",
    "koatty_static": "^1.2.13",
    "koatty_store": "^1.6.1",
    "koatty_typeorm": "^1.3.1",
    "koatty_views": "^1.0.9",
    "mysql": "^2.18.1",
    "oidc-provider": "^7.14.3"
  }
}